<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<sounds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../shared/xml/schema/vehicle_sounds.xsd">
    <motorized>
        <sounds>
            <motor template="engineLarge" file="scania_loop.gls" volumeScale="1.65"/>
            <motor template="indoorCabinRumble" />
            <gearbox template="transmissionLarge" file="$data/sounds/vehicles/transmission/truckTransmissionLoop.wav" pitchScale="0.7" volumeScale="0.1"/>
            <compressedAir template="compressedAir"/>
            <airCompressorRun template="brakeCompressorLarge" />
            <airCompressorStop template="compressedAir"/>
            <airRelease template="TRUCK_BRAKE_REGULATOR_VALVE" />
            <reverseDrive template="REVERSE_BEEP_03" />
        </sounds>
    </motorized>

    <lights>
        <sounds>
            <toggleLights template="SWITCH_01" />
            <turnLight template="SWITCH_TURNLIGHT" />
        </sounds>
    </lights>

    <attacherJoints>
        <attacherJointConfigurations>
            <attacherJointConfiguration>
                <attacherJoint>
                    <attachSound template="truckAttach" linkNode="0>" />
                    <detachSound template="truckDetach" linkNode="0>" />
                </attacherJoint>
            </attacherJointConfiguration>
        </attacherJointConfigurations>
        <sounds>
            <attach template="ATTACH_01" />
            <hydraulic template="defaultHydraulicSound" />
        </sounds>
    </attacherJoints>
    

    <drivable>
        <sounds>
            <waterSplash template="WATER_SPLASH_01" />
        </sounds>
    </drivable>

    <cylindered>
        <sounds>
            <hydraulic template="defaultHydraulicSound" />
        </sounds>
    </cylindered>

    <honk>
        <sound template="HONK_TRUCK" linkNode="0>" />
    </honk>
</sounds>
