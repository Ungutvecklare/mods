<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<sounds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../shared/xml/schema/vehicle_sounds.xsd">
    <motorized>
        <sounds>
            <motor template="engineLarge" file="sounds/tgx26640_loop.gls" volumeScale="1.45"/>
            <motor template="indoorCabinRumble" />
            <gearbox template="transmissionLarge" file="$data/sounds/vehicles/transmission/truckTransmissionLoop.wav" pitchScale="0.7" volumeScale="0.15"/>
            <compressedAir template="compressedAir"/>
            <airCompressorRun template="brakeCompressorLarge" />
            <airCompressorStop template="compressedAir"/>
            <airRelease template="TRUCK_BRAKE_REGULATOR_VALVE" />
            <reverseDrive template="REVERSE_BEEP_03" />
        </sounds>
    </motorized>

    <lights>
        <sounds>
            <toggleLights template="SWITCH_01" />
            <turnLight template="SWITCH_TURNLIGHT" />
        </sounds>
    </lights>

    <attacherJoints>
        <sounds>
            <attach template="truckAttach" linkNode="0>" />
            <detach template="truckDetach" linkNode="0>" />
        </sounds>
    </attacherJoints>

    <drivable>
        <sounds>
            <waterSplash template="WATER_SPLASH_01" />
        </sounds>
    </drivable>
	
	<honk>
        <sound template="HONK_TRAIN" file="sounds/HRFFHonk.ogg" volumeScale="5"/>
    </honk>
</sounds>
