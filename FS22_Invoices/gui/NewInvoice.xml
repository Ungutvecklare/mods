<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<GUI onOpen="onOpen" onClose="onClose" onCreate="onCreate">
    <GuiElement type="empty" profile="newLayer" />
    <GuiElement type="bitmap" profile="dialogFullscreenBg" />
    <GuiElement type="bitmap" profile="bgVignette"/>
    <GuiElement type="bitmap" profile="bgGlowDialog" />
    <GuiElement type="bitmap" profile="newInvoiceDialog" id="dialogElement">        
        <GuiElement type="text" profile="dialogTitle" text="$l10n_ui_newInvoice_title" position="0px -20px" />
        
        <GuiElement type="empty" profile="newInvoiceBox">
            <GuiElement type="empty" profile="newInvoiceBox1">
                <GuiElement type="text" profile="newInvoiceSubTitle" text="$l10n_ui_newInvoice_title_1" />
                
                <GuiElement type="text" profile="newInvoiceSettingTitle" id="textSelectFarm" text="$l10n_ui_newInvoice_farm" position="10px -70px" size="300px 30px"/>
                <GuiElement type="button" profile="newInvoiceBtnSelectFarm" id="btnSelectFarm" position="10px -100px" size="300px 30px" text="$l10n_ui_newInvoice_noFarm" onClick="onClickSelectFarm" handleFocus="true" />
                    
                <GuiElement type="smoothList" profile="newInvoiceFullList" id="newInvoiceFullList" focusInit="onOpen">
                    <GuiElement type="listItem" profile="newInvoiceFullListItem" name="newInvoiceFullListRowTemplate" >
                        <GuiElement type="bitmap" profile="ingameMenuInvoicesRowBackground">
                            <GuiElement type="text" profile="newInvoiceFullListRowCell" position="5px 0px" size="205px 40.77px" name="workName" />
                            <GuiElement type="text" profile="newInvoiceFullListRowCell" position="215px 0px" size="165px 40.77px" name="addText" />
                            <GuiElement type="text" profile="newInvoiceFullListRowCellR" position="320px 0px" size="145px 40.77px" name="workPrice" />
                        </GuiElement>
                    </GuiElement>
                </GuiElement>
                
                <GuiElement type="text" profile="newInvoiceAmountFull" position="5px -630px" size="315px 40.77px" text="$l10n_ui_fullCost" />
                <GuiElement type="text" profile="newInvoiceAmountFullR" position="320px -630px" size="205px 40.77px" id="textFullCost" />

                <GuiElement type="threePartBitmap" profile="verticalListSliderRightDocked" size="12px 460px" position="0px -150px">
                    <GuiElement type="slider" profile="verticalListSliderBar" size="6px 450px" dataElementId="newInvoiceFullList" id="newInvoiceFullListSlider" handleFocus="false" focusInit="onOpen"/>
                </GuiElement>  
            </GuiElement>

            <GuiElement type="bitmap" profile="newInvoiceBoxSeperator" />

            <GuiElement type="empty" profile="newInvoiceBox2">
                <GuiElement type="text" profile="newInvoiceSubTitle" text="$l10n_ui_newInvoice_title_2" />
                <GuiElement type="smoothList" profile="newInvoiceChooseWork" id="newInvoiceListChooseWork" focusInit="onOpen">
                    <GuiElement type="listItem" profile="ingameMenuInvoicesListItem" name="newInvoiceListChooseWorkRowTemplate" >
                        <GuiElement type="bitmap" profile="ingameMenuInvoicesRowBackground">
                            <GuiElement type="text" profile="newInvoiceChooseWorkRowCell" position="5px 0px" size="295px 40.77px" name="workName" />
                            <GuiElement type="text" profile="newInvoiceChooseWorkRowCell" position="300px 0px" size="140px 40.77px" name="workPrice" />
                        </GuiElement>
                    </GuiElement>
                </GuiElement>
                <GuiElement type="threePartBitmap" profile="newInvoiceChooseWorkSlider">
                    <GuiElement type="slider" profile="verticalListSliderBar" size="6px 640px" dataElementId="newInvoiceListChooseWork" id="newInvoiceListChooseWorkSlider" handleFocus="false" focusInit="onOpen"/>
                </GuiElement>  
                
                <GuiElement type="empty" profile="newInvoiceBox2_1">
                    <GuiElement type="text" profile="newInvoiceSettingTitle" id="textSelectField" text="$l10n_ui_newInvoice_field" position="10px -70px" size="300px 30px"/>
                    <GuiElement type="button" profile="newInvoiceBtnSelectField" id="btnSelectField" position="10px -100px" size="300px 30px" text="$l10n_ui_newInvoice_noField" onClick="onClickSelectField" handleFocus="true" />
                    
                    <GuiElement type="text" profile="newInvoiceSettingTitle" id="textEntryCount" text="$l10n_ui_newInvoice_countStk" position="10px -150px" size="300px 30px"/>
                    <GuiElement type="textInput" profile="newInvoiceSettingTextinput" id="inputEntryCount" position="10px -180px" size="300px 30px" onEnterPressed="onEnterPressedField" imeDescription="$l10n_ui_newInvoice_countStk" imePlaceholder="$l10n_ui_newInvoice_countStk" imeTitle="$l10n_ui_newInvoice_countStk" imeKeyboardType="normal" />
                        
                    <GuiElement type="text" profile="newInvoiceSettingTitle" id="textAdditional" text="$l10n_ui_newInvoice_textAdd" position="10px -230px" size="300px 30px"/>
                    <GuiElement type="textInput" profile="newInvoiceSettingTextinput" id="inputAdditional" position="10px -260px" size="300px 30px" onEnterPressed="onEnterPressedField" imeDescription="$l10n_ui_newInvoice_textAdd" imePlaceholder="$l10n_ui_newInvoice_textAdd" imeTitle="$l10n_ui_newInvoice_textAdd" imeKeyboardType="normal" />
                     
                    <GuiElement type="text" profile="newInvoiceSettingTitle" id="textOwnPrice" text="$l10n_ui_newInvoice_ownPrice" position="10px -310px" size="300px 30px"/>
                    <GuiElement type="textInput" profile="newInvoiceSettingTextinput" id="inputOwnPrice" position="10px -340px" size="300px 30px" onEnterPressed="onEnterPressedFieldPrice" imeDescription="$l10n_ui_newInvoice_ownPrice" imePlaceholder="$l10n_ui_newInvoice_ownPrice" imeTitle="$l10n_ui_newInvoice_ownPrice" imeKeyboardType="normal" />
                    <GuiElement type="text" profile="newInvoiceSettingTitle" id="textOwnPriceUnit" position="320px -340px" size="30px 30px"/>

                    <GuiElement type="text" profile="newInvoiceSettingEntryAmount" id="textEntryAmount" position="0px 70px"/>

                    <GuiElement type="button" profile="newInvoiceBtnAddItem" id="btnAddItem" text="$l10n_ui_newInvoice_addItem" onClick="onClickCreateItem" handleFocus="true" />
                </GuiElement>
            </GuiElement>
        </GuiElement>

        <GuiElement type="flowLayout" profile="buttonBoxDialog">
            <GuiElement type="button" profile="buttonBack" text="$l10n_ui_newInvoice_btnClose" onClick="onClickBack" />
            <GuiElement type="button" profile="buttonExtra1" text="$l10n_ui_newInvoice_btnDeleteEntry" onClick="onClickDeleteEntry" id="btnDeleteEntry" />
            <GuiElement type="button" profile="buttonOK" text="$l10n_ui_newInvoice_btnSend" onClick="onClickSend" id="btnCreateInvoice" />
        </GuiElement>
    </GuiElement>
</GUI>